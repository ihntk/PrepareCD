<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="430.0"
      prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.af.igor.prepcd.controller.RootLayoutController">
    <children>
        <MenuBar>
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem
                                fx:id="renameAllDrawingsFiles"
                                disable="true"
                                mnemonicParsing="false"
                                onAction="#handleRenameAllDrawingsFiles"
                                text="Rename all drawings"
                        />
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <CheckMenuItem
                                fx:id="generalModeMenuItem"
                                mnemonicParsing="false"
                                onAction="#handleGeneral"
                                selected="true"
                                text="General"
                        />
                        <CheckMenuItem
                                fx:id="remoteModeMenuItem"
                                mnemonicParsing="false"
                                onAction="#handleRemote"
                                text="Remote"
                        />
                        <CheckMenuItem
                                fx:id="offlineModeMenuItem"
                                mnemonicParsing="false"
                                onAction="#handleOffline"
                                text="Offline"
                        />
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" text="Close"/>
                    </items>
                </Menu>
                <Menu
                        fx:id="openMenu"
                        disable="true"
                        mnemonicParsing="false"
                        text="Open"
                >
                    <items>
                        <MenuItem
                                mnemonicParsing="false"
                                onAction="#handleOpenPrint"
                                text="Print"
                        />
                        <MenuItem
                                mnemonicParsing="false"
                                onAction="#handleOpenLocalMachineDir"
                                text="Local machine directory"
                        />
                        <MenuItem
                                mnemonicParsing="false"
                                onAction="#handleOpenRemoteMachineDir"
                                text="Remote machine directory"
                        />
                        <MenuItem
                                mnemonicParsing="false"
                                onAction="#handleOpenBaseDrawings"
                                text="Base drawings"
                        />
                        <MenuItem
                                mnemonicParsing="false"
                                onAction="#handleOpenBaseCD"
                                text="Base CD"
                        />
                        <MenuItem
                                mnemonicParsing="false"
                                onAction="#handleOpenRemoteCD"
                                text="Remote CD"
                        />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem
                                mnemonicParsing="false"
                                onAction="#handleAbout"
                                text="About"
                        />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </children>
</VBox>
